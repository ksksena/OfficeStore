@model OfficeStore.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Панель администратора";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Товары</div>
            <div class="card-body">
                <h4 class="card-title">@Model.TotalProducts</h4>
                <p class="card-text">Всего товаров в каталоге</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Поставщики</div>
            <div class="card-body">
                <h4 class="card-title">@Model.TotalSuppliers</h4>
                <p class="card-text">Активных поставщиков</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Заказы</div>
            <div class="card-body">
                <h4 class="card-title">@Model.TotalOrders</h4>
                <p class="card-text">Всего заказов</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Пользователи</div>
            <div class="card-body">
                <h4 class="card-title">@Model.TotalUsers</h4>
                <p class="card-text">Зарегистрированных пользователей</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Управление товарами</h5>
            </div>
            <div class="card-body">
                <p>Добавляйте, редактируйте и удаляйте товары в каталоге</p>
                <a asp-action="Products" class="btn btn-primary">Управление товарами</a>
                <a asp-action="CreateProduct" class="btn btn-success">Добавить товар</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Управление заказами</h5>
            </div>
            <div class="card-body">
                <p>Просматривайте и управляйте заказами клиентов</p>
                <a asp-action="Orders" class="btn btn-primary">Просмотр заказов</a>
            </div>
        </div>
    </div>
</div>
