@model LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth-style.css" />
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Авторизация</h1>

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="error-message">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label class="auth-label">Введите логин</label>
                    <input asp-for="Email" class="auth-input" type="email" placeholder="Ваш email" />
                </div>

                <div class="form-group">
                    <label class="auth-label">Введите пароль</label>
                    <input asp-for="Password" class="auth-input" type="password" placeholder="Ваш пароль" />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label auth-label">Запомнить меня</label>
                </div>

                <button type="submit" class="auth-btn">Войти</button>

                <div class="auth-text">
                    Нет аккаунта? <a asp-action="Register" class="auth-link">Регистрация</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
