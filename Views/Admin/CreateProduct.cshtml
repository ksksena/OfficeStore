@model OfficeStore.Models.Product
@{
    ViewData["Title"] = "Добавить товар";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Информация о товаре</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateProduct" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Введите название товара" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="SupplierId" class="form-label"></label>
                                <select asp-for="SupplierId" class="form-select" asp-items="@ViewBag.Suppliers">
                                    <option value="">-- Выберите поставщика --</option>
                                </select>
                                <span asp-validation-for="SupplierId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание товара"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                                    <span class="input-group-text">₽</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Stock" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="0" />
                                    <span class="input-group-text">шт.</span>
                                </div>
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Создать товар
                        </button>
                        <a asp-action="Products" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Назад к списку
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
