@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/auth-style.css" />
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Регистрация</h1>

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="error-message">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label class="auth-label">Имя</label>
                    <input asp-for="FirstName" class="auth-input" type="text" placeholder="Ваше имя" />
                </div>

                <div class="form-group">
                    <label class="auth-label">Фамилия</label>
                    <input asp-for="LastName" class="auth-input" type="text" placeholder="Ваша фамилия" />
                </div>

                <div class="form-group">
                    <label class="auth-label">Email</label>
                    <input asp-for="Email" class="auth-input" type="email" placeholder="Ваш email" />
                </div>

                <div class="form-group">
                    <label class="auth-label">Пароль</label>
                    <input asp-for="Password" class="auth-input" type="password" placeholder="Придумайте пароль" />
                </div>

                <div class="form-group">
                    <label class="auth-label">Подтвердите пароль</label>
                    <input asp-for="ConfirmPassword" class="auth-input" type="password" placeholder="Повторите пароль" />
                </div>

                <button type="submit" class="auth-btn">Зарегистрироваться</button>

                <div class="auth-text">
                    Уже есть аккаунт? <a asp-action="Login" class="auth-link">Войти</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
